<table>
  <tbody>
    <tr>
      <th>Statuses displayed on Team Board</th>
      <td>
        <% IssueStatus.order(:position).all.each do |status| %>
          <div>
            <%= check_box_tag 'settings[statuses][]', status.id, settings['statuses'] == 'all' || settings['statuses'].include?(status.id.to_s) %>
            <%= status.name %>
          </div>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>